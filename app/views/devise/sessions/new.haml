

.full-height.row.middle-xs.white-text.center-xs.main-background.no-margin
  %div.col-xs-12col-sm-8col-md-6col-lg-4
    %div.box
      .big-padding.blue.text-left.white-text.top-space
        %h2 Iniciar Sesi√≥n
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| 

          .row
            .col-xs-10col-sm-6col-md-4col-lg-2
              .box
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  = f.email_field :email, autofocus: true,class:"mdl-textfield__input"
                  = f.label :email, class:"mdl-textfield__label grey-text"

          .row
            .col-xs-10col-sm-6col-md-4col-lg-2
              .box
                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                  = f.password_field :password,class:"mdl-textfield__input"
                  = f.label :password, class:"mdl-textfield__label grey-text", autocomplete: "off"

          .row
            .col-xs-10col-sm-6col-md-4col-lg-2
              .box
                .mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect
                  = f.check_box :remember_me,class:"mdl-checkbox__input"
                  = f.label :remember_me, value:"Recordarme" ,class:"mdl-checkbox__label", autocomplete: "off"
          .top-space
            .row.middle-xs.around-xs
              .col-xs-12col-md-5
                .box
                  =f.submit "Iniciar Sesion",class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored"

              .col-xs-12col-md-5
                .box
                  -if devise_mapping.registerable? && controller_name != 'registrations' 
                    = link_to "Registrarse", new_registration_path(resource_name),class:"mdl-button mdl-js-button mdl-button--raised mdl-button--accent"

          .row
            .col-xs-10col-sm-6col-md-4col-lg-2
              .box
                = render "devise/shared/links" 

