= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
	= devise_error_messages! 

	.row
		.col-xs-10col-sm-6col-md-4col-lg-2
			.box
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.email_field :email, autofocus: true,class:"mdl-textfield__input"
					= f.label :email, class:"mdl-textfield__label grey-text",required: true
	.row
		.col-xs-10col-sm-6col-md-4col-lg-2
			.box
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.password_field :password, autofocus: true,class:"mdl-textfield__input"
					= f.label :password, class:"mdl-textfield__label grey-text",required: true
	.row
		.col-xs-10col-sm-6col-md-4col-lg-2
			.box		
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.password_field :password_confirmation, autofocus: true,class:"mdl-textfield__input"
					= f.label :password_confirmation, class:"mdl-textfield__label grey-text",required: true
	.row
		.col-xs-10col-sm-6col-md-4col-lg-2
			.box
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.text_field :username, autofocus: true,class:"mdl-textfield__input"
					= f.label :username, class:"mdl-textfield__label grey-text",required: true

	.top-space
		.row.middle-xs.around-xs
			.col-xs-12col-md-5
				.box
					=f.submit "Registrar",class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored"

			.col-xs-12col-md-5
				.box
					=link_to "Ya tengo cuenta",new_user_session_path,class:"white-text underline"